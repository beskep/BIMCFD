#:kivy 1.11

<SimplificationPanel@MDBoxLayout>:
    BIMCFDPanel:
        MDGridLayout:
            cols: 1
            padding: dp(10)

            PanelTitle:
                # icon: 'vector-union'
                icon: 'tune'
                text: '형상 단순화'
            MDSeparator:
                height: dp(1)
                size_hint_y: None
            
            # main options
            MDBoxLayout:
                pading: dp(10)
                spacing: dp(10)
            
                MDBoxLayout:
                    spacing: dp(10)
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(25)

                        MDCheckbox:
                            id: simplify
                            active: False
                            on_state: app.check_simplify(self.state)
                        MDCheckbox:
                            id: relative_threshold
                            active: True
                            on_state: app.check_relative_threshold(self.state)
                            # disabled: True
                        MDCheckbox:
                            id: preserve_openings
                            active: True
                            # disabled: True
                        MDCheckbox:
                            id: opening_volume
                            active: True
                            # disabled: True
                        MDCheckbox:
                            id: internal_faces
                        # disabled: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.8

                        MDLabel:
                            text: '형상 단순화 시행'
                        MDLabel:
                            text: '상대적 기준 적용'
                        MDLabel:
                            text: '개구부 형상 보존'
                        MDLabel:
                            text: '개구부 부피 보존'
                        MDLabel:
                            text: '외부 영역 추출'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 1.0

                    TextFieldUnit:
                        id: precision
                        hint_text: '정밀도'
                        text: '0.1'
                        unit: 'm'
                        show_unit: True
                    TextFieldUnit:
                        id: dist_threshold
                        hint_text: '단순화 거리 기준'
                        text: '0.5'
                        unit: 'm'
                        show_unit: False
                    TextFieldUnit:
                        id: vol_threshold
                        hint_text: '단순화 부피 기준'
                        text: '0.0'
                        unit: 'm³'
                        show_unit: False
                    TextFieldUnit:
                        id: angle_threshold
                        hint_text: '단순화 각도 기준'
                        text: '90.0'
                        unit: 'degree'
                        show_unit: True
                
                MDBoxLayout:
                    size_hint_x: None
                    width: dp(10)
