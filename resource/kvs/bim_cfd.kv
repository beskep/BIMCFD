#:kivy 1.11

<MDRaisedButton>:
    pos_hint: {'center_y': 0.5}
    # text_color: 0, 0, 0, 0.9
<MDLabel>:
    pos_hint: {'center_y': 0.5}
<MDTextField>:
    pos_hint: {'center_y': 0.5}
<MDDropDownItem>:
    pos_hint: {'center_y': 0.5}

<TextFieldFont>:
    font_name: 'NotoSansKR'

<DropDownMenu>:
    font_name: 'NotoSansKR'

<BIMCFDPanel@MDCard>:
    elevation: 1

<BimCfdWidget>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    MDBoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)
        elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            elevation: 0
            size_hint_x: 0.4

            FilePanel:
                id: file_panel
                size_hint_y: 1.2

            SimplificationPanel:
                id: simplification_panel

            MaterialPanel:
                id: material_panel
                size_hint_y: 0.6

            OutputPanel:
                id: output_panel

            MDStackLayout:
                orientation: 'rl-tb'
                adaptive_height: True
                spacing: dp(5)

                MDRaisedButton:
                    text: 'CFD 환경변수 변환'
                    font_size: 16
                    on_release: app.execute()

                MDRaisedButton:
                    text: '전처리'
                    font_size: 16
                    on_release: app.simplify_space()

        ViewPanel:
            id: view_panel
            elevation: 0

    MDScreen:
        height: 35
        size_hint_y: None
        radius: [5, 5, 5, 5]
        md_bg_color: (0.741, 0.741, 0.741, 1)

        MDBoxLayout:
            padding: dp(5)

            MDLabel:
                id: status_bar
                text: 'CFD Environment Variables'
                text_color: (1, 1, 1, 0.9)
