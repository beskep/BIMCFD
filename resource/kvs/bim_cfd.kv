#:kivy 1.11

<MDRaisedButton>:
    pos_hint: {'center_y': 0.5}
    font_size: 15
<MDLabel>:
    pos_hint: {'center_y': 0.5}
<MDTextField>:
    pos_hint: {'center_y': 0.5}
<MDDropDownItem>:
    pos_hint: {'center_y': 0.5}

<TextFieldFont>:
    font_name: 'NotoSansKR'

<DropDownMenu>:
    font_name: 'NotoSansKR'

<BIMCFDPanel@MDCard>:
    elevation: 0
    md_bg_color: app.theme_cls.bg_light

<BimCfdWidget>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)
    md_bg_color: app.theme_cls.bg_darkest

    MDBoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)
        elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            elevation: 0
            size_hint_x: 0.4

            FilePanel:
                id: file_panel
                size_hint_y: 1.2

            SimplificationPanel:
                id: simplification_panel

            CFDPanel:
                id: cfd_panel

            OutputPanel:
                id: output_panel
                size_hint_y: 1.1

            MDStackLayout:
                orientation: 'rl-tb'
                adaptive_height: True
                spacing: dp(5)

                MDRaisedButton:
                    text: 'CFD 환경변수 변환'
                    on_release: app.execute()

                MDRaisedButton:
                    text: '전처리'
                    on_release: app.simplify_space()

                MDRaisedButton:
                    text: '물성 DB'
                    on_release: app.open_material_db()

        ViewPanel:
            id: view_panel
            elevation: 0

    MDScreen:
        height: 30
        size_hint_y: None
        radius: (4, 4, 4, 4)
        md_bg_color: (0.741, 0.741, 0.741, 1)

        MDBoxLayout:
            padding: dp(10), 0, 0, 0

            MDLabel:
                id: status_bar
                font_style: 'Body2'
                text: 'CFD Environment Variables'
                text_color: (1, 1, 1, 0.9)
