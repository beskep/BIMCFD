#:kivy 1.11

<FilePanel@MDBoxLayout>:
    BIMCFDPanel:
        MDGridLayout:
            cols: 1
            padding: dp(10)

            PanelTitle:
                icon: 'home-city'
                text: 'BIM 모델'
            MDSeparator:
                height: dp(1)
                size_hint_y: None

            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(10)
                spacing: dp(10)

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(5)

                    TextFieldPath:
                        id: bim_path
                        hint_text: 'BIM 모델 불러오기'
                        helper_text_mode: 'on_error'

                    MDRaisedButton:
                        text: '파일 선택'
                        on_release: app.open_file_manager('bim')

                MDLabel:
                    text: '환경변수 설정 공간 선택'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(5)
                    DropDownMenu:
                        id: space
                        text: '[color=#A9A9A9]선택[/color]'
