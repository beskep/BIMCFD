#:kivy 1.11

<SimplificationPanel@MDBoxLayout>:
    BIMCFDPanel:
        MDGridLayout:
            cols: 1
            padding: dp(10)

            PanelTitle:
                icon: 'widgets-outline'
                text: 'CFD 모델 최적화 설정'
            MDSeparator:
                height: dp(1)
                size_hint_y: None

            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(5)

                MDBoxLayout:
                    orientation: 'horizontal'

                    MDLabel:
                        text: '건물 형상 최적화 적용'

                    MDCheckbox:
                        id: flag_simplify
                        size_hint_x: None
                        active: False

                MDBoxLayout:
                    orientation: 'horizontal'

                    MDLabel:
                        text: '건물 형상 최적화 옵션'

                    MDRaisedButton:
                        id: _button
                        text: '설정'
                        on_release: app.open_simplification_dialog()

<SimplificationContent@MDBoxLayout>
    orientation: 'vertical'
    size_hint_y: None
    spacing: dp(20)

    MDBoxLayout:
        MDLabel:
            text: '상대적 거리 기준 적용'

        MDCheckbox:
            id: flag_relative_threshold
            # active: True
            size_hint_x: None

    MDBoxLayout:
        MDLabel:
            text: '단순화 거리 기준'

        TextFieldUnit:
            id: dist_threshold
            text: '0.1'
            unit: 'm'
            size_hint_x: None
            show_unit: not flag_relative_threshold.active

    MDBoxLayout:
        MDLabel:
            text: '개구부 (창/문) 형상 유지 (단순화 제외)'

        MDCheckbox:
            id: flag_preserve_openings
            active: True
            size_hint_x: None

    MDBoxLayout:
        MDLabel:
            text: '개구부 (창/문) 부피 유지'

        MDCheckbox:
            id: flag_opening_volume
            active: True
            size_hint_x: None
