#:kivy 1.11

<CFDPanel@MDBoxLayout>:
    BIMCFDPanel:
        orientation: 'vertical'
        padding: dp(10)

        PanelTitle:
            icon: 'weather-windy'
            text: 'CFD'
        MDSeparator:
            height: dp(1)
            size_hint_y: None

        MDBoxLayout:
            orientation: 'vertical'

            MDBoxLayout:
                # padding: dp(10)
                spacing: dp(10)

                MDLabel:
                    text: 'CFD Solver'
                    size_hint_x: 1
                DropDownMenu:
                    id: solver
                    text: 'buoyantSimpleFoam'
                    size_hint_x: 3
                    width_mult: 7

            MDBoxLayout:
                spacing: dp(10)

                MDRaisedButton:
                    text: 'CFD 설정'
                    on_release: app.cfd_dialog.open()

                MDRaisedButton:
                    id: execute
                    text: '변 환'
                    size_hint_x: 1
                    disabled: True
                    on_release: app.execute()
